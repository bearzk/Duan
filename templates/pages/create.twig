{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="center">
            {% if context.hash %}
                <p>
                    {% if context.hash == 'invalid token' %}
                        {{ context.hash }}
                    {% else %}
                        <a href="{{ context.hash }}">{{ context.hash }}</a>
                    {% endif %}
                </p>
            {% endif %}
            <form method="post">
                <input type="hidden" name="token" value="{{ context.token }}"/>
                <span>Url: <input type="text" name="url"/></span><input type="submit" value="Generate" />
            </form>
        </div>
    </div>
{% endblock %}
