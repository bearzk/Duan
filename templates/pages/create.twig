{% extends "layout.twig" %}
{% block content %}
    <div class="container">
        <div class="center">
            {% if context.result %}
                <p>
                    {% if context.result == 'invalid token' %}
                        {{ context.result }}
                    {% else %}
                        <a href="{{ context.result }}">{{ context.result }}</a>
                    {% endif %}
                </p>
            {% endif %}
            <form method="post">
                <input type="hidden" name="token" value="{{ context.token }}"/>
                <input type="text" name="url" placeholder="http://twitter.com"/>
                <input type="submit" value="Generate" />
            </form>
        </div>
    </div>
{% endblock %}
