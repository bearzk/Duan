{% extends "layout.twig" %}
{% block content %}
    <div class="container-fluid">
        <div class="center">
            {{ user.email }}
            {% for token in user.tokens %}
                {{ token }}
            {% endfor %}
        </div>
        {% if urls %}
        <div class="row">
            <div class="col-lg-3 card">
                <ul>
                    <li>Links: </li>
                    {% for url in urls %}
                        <li><a href="http://duan.dev/{{ url.hash }}" target="_blank">http://duan.dev/{{ url.hash }}</a> <span>{{ url.clicks }}</span></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}
